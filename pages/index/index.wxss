/**index.wxss**/
.mapStyle {
  width: 100vh;
  height: 100vh;
  position: relative;
}

.operating {
  position: fixed;
  top: 30vh;
  right: 3px;
  max-width: 60px;
  height: 30px;
}

.btnText {
  margin-top: 0px;
  font-size: 9px;
}

.operatingImg {
  width: 30px;
  height: 30px;
}

.coverModel {
  background-color: #FFFFFF;
  height: 40%;
  width: 100%;
  position: fixed;
  bottom: 0px;
  border: 2px 0 0 0 solid #DCDFE6;
  border-radius: 20px 20px 0 0;
}

.address {
  font-size: 18;
  margin-top: 30px;
  text-overflow: ellipsis;
  word-wrap: break-word;
}
.address image{
  width: 25px;
  height: 25px;
}

.photo{
  width: 80px;
  width: 50px;
}

.login_panl{
  background-color: #FFFFFF;
  height: 20%;
  width: 100%;
  position: fixed;
  bottom: 0px;
  border: 2px 0 0 0 solid #DCDFE6;
  border-radius: 20px 20px 0 0;
}
.login_text{
  text-align: center;
  vertical-align: middle;
  font-size: 20px;
}